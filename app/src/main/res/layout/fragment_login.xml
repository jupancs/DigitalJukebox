<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <Button
        android:id="@+id/auth_fragment_host"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Host"/>

    <Button
        android:id="@+id/auth_fragment_client"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Client"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp">

        <EditText
            android:id="@+id/auth_fragment_room_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:hint="ROOM CODE"
            android:visibility="invisible"
            />

        <Button
            android:id="@+id/auth_fragment_confirm_btn"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_below="@id/auth_fragment_room_code"
            android:layout_centerHorizontal="true"
            android:text="GO"
            android:visibility="invisible"/>
    </RelativeLayout>

</LinearLayout>